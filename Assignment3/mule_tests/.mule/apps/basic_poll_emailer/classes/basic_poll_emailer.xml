http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/current/mule.xsd">

	<smtps:connector name="smtpsConnector" doc:name="SMTP">
		<smtps:tls-client path="clientKeystore"
			storePassword="mulepassword" />
		<smtps:tls-trust-store path="greenmail-truststore"
			storePassword="password" />
	</smtps:connector>
	
	<smtp:gmail-connector name="Gmail" validateConnections="true" doc:name="Gmail"/>
    <flow name="basic_poll_emailerFlow">

	    <poll doc:name="Poll" frequency="1000">
		    <schedulers:cron-scheduler expression="0 * 14 * * ?"/>
            <watermark variable="polledMessage" default-expression="Zdravstvuyte, o meu nome &#233; Vladimir Putin e gostaria de desejar-lhe um bom dia. Na Zdorov'ye tovarishch!"/>

	    </poll>
	    
		<set-payload value="#[flowVars[&quot;polledMessage&quot;]]" doc:name="Set Payload"/>
   		<smtp:outbound-endpoint host="smtp.gmail.com" port="587" user="is.spammer.2015%40gmail.com" password="vamoster20" connector-ref="Gmail" to="aclspam%40hotmail.com" from="is.spammer" subject="Testing mule email polling" responseTimeout="10000" doc:name="Send notification email"/>

    </flow>
</mule>